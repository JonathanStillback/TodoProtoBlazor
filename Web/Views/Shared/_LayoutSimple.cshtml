<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoTemplate</title>
    <base href="~/" />
</head>
<body>
    <header>
			Header
    </header>

		<main role="main" class="pb-3">
				@RenderBody()
		</main>

    <footer class="border-top footer text-muted">
			&copy; 2021 - TodoTemplate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
